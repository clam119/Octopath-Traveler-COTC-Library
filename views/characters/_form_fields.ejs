        <% } else { %>
          <option label="<%= rarity.name %>" value="<%= rarity.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>

</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="book-cover filepond">
  </div>
  <div class="form-item">
    <label>Skills</label>
    <textarea name="description"><%= character.skills %></textarea>
  </div>
</div>